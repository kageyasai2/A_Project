<% if flash[:discarded_foods].present? %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <h4 class="alert-heading">廃棄した食材
        <button type="button" class="close" data-dismiss="alert" aria-label="閉じる">
          <span aria-hidden="true">&times;</span>
        </button>
    </h4>
    <p>
      <ul class="text-center" style="list-style: none;">
        <% flash[:discarded_foods].each.with_index(1) do |discarded_food, i| %>
          <li><%= discarded_food[:name] %><%= " - #{discarded_food[:gram]}g" if discarded_food[:gram].present? %></li>
          <% unless flash[:discarded_foods].size == i %>
            <hr>
          <% end %>
        <% end %>
      </ul>
    </p>
  </div>
<% end %>
