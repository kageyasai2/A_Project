<div class="form-row mb-1" id="<%= "#{id}" %>">
  <div class="col-5">
    <input
      name="items[][food_name]"
      class="form-control"
      type="text"
      placeholder="食材名"
      value="<%= food.name if food %>"
      required
    >
  </div>

  <div class="col-5">
    <input
      name="items[][gram]"
      class="form-control"
      type="number"
      placeholder="食材の重さ(g)"
      value="<%= food.gram if food %>"
    >
  </div>

  <div class="col-1">
    <button type="button" name="removeButton" class="btn btn-sm btn-danger mt-1">
      <i class="fas fa-times"></i>
    </button>
  </div>
</div>

