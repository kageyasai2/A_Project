<div class="container">
  <h1>飢餓学割新規登録</h1>


<form action="/signup" method="POST">

  <div class="form-group">
    <label for="exampleDropdownFormEmail1"><i class="fas fa-user-circle"></i> ニックネーム</label>
    <input type="name" class="form-control" id="exampleDropdownFormEmail1" placeholder="名前を入力">
  </div>

  <div class="form-group">
    <label for="exampleDropdownFormEmail1"><i class="fas fa-envelope"></i> Eメールアドレス</label>
    <input type="email" class="form-control" id="exampleDropdownFormEmail1" placeholder="email@example.com">
  </div>

  <div class="form-group">
    <label for="exampleDropdownFormPassword1"><i class="fas fa-key"></i> パスワード</label>
    <input data-toggle="password" class="form-control" type="password" maxlength="10" placeholder="パスワードの入力">
  </div>

  <div class="form-group">
    <input type="password" class="form-control" type="password" maxlength="10" placeholder="パスワードの再入力">
  </div>

<button id="signin" type="submit" class="btn btn-primary">登録する</button>
</form>

