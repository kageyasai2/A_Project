<% if flash[:foods].present? %>
  <h3>食材登録に成功した食材</h3>

  <table class="table table-success">
    <thead>
      <tr>
        <th scope="col">食材名</th>
        <th scope="col">賞味期限</th>
        <th scope="col">グラム数</th>
      </tr>
    </thead>
    <tbody>
    <% flash[:foods].each do |food| %>
      <tr>
        <td><%= food[:food_name] %></td>

        <% if food[:date].present? %>
          <td><%= food[:date] %></td>
        <% else %>
          <td></td>
        <% end %>

        <% if food[:gram].present? %>
          <td><%= food[:gram] %>g</td>
        <% else %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>

<% if flash[:error].present? %>
  <h3><%= flash[:error] %></h3>
<% end %>